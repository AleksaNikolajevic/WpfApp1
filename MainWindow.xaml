<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView Name="TagListView" Margin="10" ItemsSource="{Binding Tags}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Reader" DisplayMemberBinding="{Binding Reader}" Width="100"/>
                    <GridViewColumn Header="Antenna" DisplayMemberBinding="{Binding AntennaId}" Width="70"/>
                    <GridViewColumn Header="EPC" DisplayMemberBinding="{Binding EPC}" Width="200"/>
                    <GridViewColumn Header="TID" DisplayMemberBinding="{Binding TID}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
